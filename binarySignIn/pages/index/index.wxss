
page{
  width:100%;
  height: 100%
}
.top_sign{
  padding: 2vw 4vw;
  width: 100vw;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-shadow: 0 0 5px -1px gray;
}
.user_icon{
  border-radius: 50%;
  width: 8vw;
  height: 8vw;
  
  box-shadow: 0 0 5px -1px black inset;


}
.container{
  width: 100%;
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding-bottom: 10%;
}
.item{
  display: flex;
  flex-direction: column;
  align-items: center
}
.item_cont{
  width: 20vw;
  height: 20vw;
  border-radius: 50%;
  background-color: #1296db;
  display: flex;
  justify-content: center;
  align-items: center
}
.item_img{
  width: 15vw;
  height: 15vw;
}
.item_txt{
  margin-top: 1vw;
  
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.name_window{
width: 50vw;
top: 38%;
left: 19%;
position: absolute;
background-color: white;
display: flex;
flex-direction: column;
align-items: center;
padding: 3vw 6vw;
border-radius: 4px;
z-index: 9999;

}