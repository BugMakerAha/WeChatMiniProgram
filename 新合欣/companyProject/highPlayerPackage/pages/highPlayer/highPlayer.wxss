/* highPlayerPackage/pages/highPlayer/highPlayer.wxss */

page {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.contain {
  flex: 1;
  height: 0;
  color: #ffffff00;
}

.modal {
  position: fixed;
  z-index: 1000;
  background-color: black;
  opacity: 0.5;
  width: 100%;
  height: 100%;
  color: #00690e;
}

.modal_item {
  display: flex;
  flex-direction: row;
  margin: 3vw;
  align-items: center;
  justify-content: flex-end;
}

.input_style {
  border: 1px solid gray;
  width: 50vw;
  margin-left: 5vw;
  height: 7vw;
  border-radius: 5px;
}

.window {
  font-size: 4vw;
  background-color: white;
  opacity: 1;
  position: fixed;
  bottom: 0;
  width: 100vw;
  display: flex;
  flex-direction: column;
  z-index: 1111;
}

.pay_checked {
  color: red;
  border: red 1px solid;
}

.pay_enable {
  border: gray 1px solid;
  border-radius: 5px;
  color: gray;
}

.pay_disable {
  border: #d4d4d4 1px solid;
  border-radius: 5px;
  color: #d4d4d4;
}

.cdk_disable {
  border: #d4d4d4 1px solid;
  border-radius: 5px;
  color: #d4d4d4;
}

.cdk_enable {
  border: rgb(172, 211, 146) 1px solid;
  border-radius: 5px;
  color: black;
}

.dir_row {
  display: flex;
  flex-direction: row;
}
