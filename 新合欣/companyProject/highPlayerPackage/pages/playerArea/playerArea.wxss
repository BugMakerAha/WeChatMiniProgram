/* highPlayerPackage/pages/playerArea/playerArea.wxss */

.join {
  width: 46px;
  height: 46px;
  border-radius: 50%;
  position: fixed;
  right: 3vw;
  bottom: 30vw;
  background-color: white;
  font-size: 3.5vw;
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 999;
  box-shadow: 0 0 15px -7px green;
  border: 1px solid rgb(45, 180, 45);
}

.btn_item {
  z-index: 500;
  position: absolute;
  width: 46px;
  height: 46px;
  border-radius: 50%;
  right: 3vw;
  bottom: 30vw;
  box-shadow: 0 0 15px -7px gray;
  display: flex;
  flex-direction: column;
  font-size: 11px;
  justify-content: center;
  align-items: center;
  background-color: white;
}

.btn_img {
  width: 25px;
  height: 25px;
}

page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.on {
  color: coral;
}

.swiper_top {
  width: 96vw;
  display: flex;
  margin-left: 2vw;
  flex-direction: row;
  font-size: 4vw;
  align-items: center;
  box-shadow: 0 3px 9px -5px gray;
  background-color: white;
  position: relative;
  z-index: 20;
  
}

.swiper_top_item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 2.5vw 0;
  font-size: 3.5vw;
}

.swiper_contain {
  width: 100vw;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.activity_container {
  margin: 2vw 2vw 0 2vw;
  width: 95vw;
  background-color: white;
  border: 0.5vw solid green;
  border-radius: 8px;
}

.no_verified_activity {
  height: 50.5vw;
  width: 92vw;
  border: 1vw solid white;
  border-radius: 8px;
  margin-left: 0.5vw;
}

.activityinfo {
  font-size: 4vw;
  color: black;
  padding-left: 2vw;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  display: block;
}

.activityprogress {
  padding-left: 1vw;
  padding: 2vw 0 3vw 2vw;
  width: 60%;
}

.progresstext {
  font-size: 3vw;
  margin-top: 2vw;
  margin-left: 4vw;
  line-height: 1;
}

.swiper2-2_item {
  width: 92vw;
  margin-bottom: 2vw;
  padding: 1.5vw;
  display: flex;
  flex-direction: row;
  border: 2px solid #e2e2e2;
  border-radius: 4px;
  box-shadow: 3px 4px 9px -9px gray;
}

.swiper2-2_item_img {
  width: 25vw;
  height: 15vw;
}

.swiper2-2_item_content {
  margin-left: 4vw;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 3vw;
  width: 0;
  position: relative;
}
