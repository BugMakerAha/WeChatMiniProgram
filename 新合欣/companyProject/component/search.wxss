  display: flex;
  background-color: #c5e0b4;
  width: 50%;
  height: 32px;
  flex-direction: row;
  justify-content: center;
  border-radius: 16px;
  position: relative;
  padding-left: 8px;
  
}
.searchicon {
  margin: 15rpx 10rpx 10rpx 10rpx;
  width: 16px;
  height: 16px;
  position: relative;
}
