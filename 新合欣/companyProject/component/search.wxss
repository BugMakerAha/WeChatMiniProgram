  width: 100%;
  background-color: #359422;
  top: 0;
  left: 0;
  z-index: 999;
}
.statusbar{
    width: 100%;
    background-color: black;
    position: fixed;
     top: 0;
  left: 0;
  z-index: 999;
}
.search{
  width: 96%;
  display: flex;
  justify-content: left;
  position:absolute;
  margin-left: 4%;
}
