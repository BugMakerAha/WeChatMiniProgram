/* pages/allianceIntroduction/allianceIntroduction.wxss */
.join{
  width: 17vw;
  height: 17vw;
  border-radius: 50%;
  border: 2px white solid;
  position: fixed;
  right: 3vw;
  bottom: 40vw;
  box-shadow: 1px 1px 3px 2px gray;
  background-color: rgba(61, 141, 24, 0.5);
  font-size: 4vw;
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

page{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.contain{
  width: 100%;
  flex: 1;
  overflow-x: hidden;
  overflow-y: scroll;

}
.img{
  width: 100%;

}
.title_font{
  margin-top: 3vw;
  font-size: 5vw;
  
}
.bottom_font{
  font-size: 3.5vw;
  color: gray;
  padding: 2vw 3vw;
  text-align: center;
  width: 94vw;
  background-color: whitesmoke;
}
.gray_line{
  width: 100vw;
  height: 2vw;
  margin-top: 2vw;
  background-color: whitesmoke;
}

.row{
  display: flex;
  flex-direction: row;
}
.text_block{
  width: 20vw;
  font-size: 4vw;
  color: gray;
  background-color: whitesmoke;
  padding: 3vw;
}
.block_contain{
  width: 100vw;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 10vw;
}
.block_item{
  display: flex;
  flex-direction: column;
  
  align-items: center;

}
.block_item_img {
  width: 12vw;
  height: 12vw;
}

.block_item_text {
  font-size: 3.5vw;
  margin-top: 2vw;
  
}