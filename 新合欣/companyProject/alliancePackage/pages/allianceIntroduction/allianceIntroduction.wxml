      <block wx:for="{{Array2}}">
        <view class='block_item'>
          <image src='{{item.src}}' class='block_item_img'></image>
          <text class='block_item_text'>{{item.text}}</text>
        </view>

      </block>
    </view>
    <view class="bottom_font">互客联盟成员可在平台内发送需求及可交换的资源</view>
