    <view class="block_contain" style="padding:0 6vw;width:87vw">
      <block wx:for="{{Array1}}">
        <view class='block_item'>
          <image src='{{item.src}}' class='block_item_img' style="width:8vw;height:8vw"></image>
          <text class='block_item_text'>{{item.text}}</text>
