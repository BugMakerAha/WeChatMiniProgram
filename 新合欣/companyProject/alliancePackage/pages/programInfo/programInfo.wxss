/* pages/programInfo/programInfo.wxss */
page{
  display: flex;
  flex-direction: column;
  
}
.contain{
  flex: 1;
  height: 0
}
.head{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 0 2vw 0;
  border-bottom: 5px solid whitesmoke;
}
.swiper1_progress {
  width: 45vw;
}
.content{
  padding: 2vw;
  font-size: 3.5vw;
  color: gray;
}
.dir_row{
  display: flex;
  flex-direction: row
}
.dir_column{
  display: flex;
  flex-direction: column
}
.comment{
  padding: 2vw;
  width:100%;
}
.comment_item{
  display: flex;
  flex-direction: column;
  margin-top: 2vw;
  font-size: 4vw;
  border-bottom: 1px solid whitesmoke;
}
.footer{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  height: 12vw;
  align-items: center;
  border-top: 1px solid whitesmoke;

}
.footer_item{
  font-size: 3vw;
  color: rgb(73, 73, 73);
  display: flex;
  flex-direction: row;
  align-items: center;
}
