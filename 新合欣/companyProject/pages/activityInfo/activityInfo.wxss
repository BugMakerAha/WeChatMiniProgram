.head {
  width: 100%;
  display: flex;
  flex-direction: row;
  /* border-bottom: 2px solid whitesmoke; */
  background-color: rgb(112,172,72)

}

.head_item_right {
  padding-left: 1vw;
  display: flex;
  flex-direction: column;
  flex: 1;
  justify-content: center;
  
}

.head_image {
  margin: 2vw 3vw;
  border-radius: 50%;
  width: 15vw;
  height: 15vw;
}

.head_text {
  font-size: 4vw;
  color: white;
}

.head_right_icon {
  width: 5vw;
  height: 5vw;
  margin-right: 1vw;
}

.head_right_icontext {
  justify-content: left;
  align-items: center;
  padding: 1vw;
  border-radius: 5px;
  margin-right: 1.5vw;
  display: flex;
  flex-direction: row;
  background-color: rgb(112,172,72);
  width: 28vw;
}

.head_right_bottom {
  margin-top: 2vw;
  display: flex;
  flex-direction: row;
}

.head_right_bottom_text {
  font-size: 3.3vw;
}

.body {
  width: 100%;
  border-bottom: 1px solid rgb(235, 235, 235)
}

.body_func_box {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  /* margin: 1vw 0 2vw 0; */
}

.body_func_contain {
  width: 100%;
  display: flex;
  flex-direction: row;
  
  justify-content: center;
  
  background-color: rgb(168, 209, 141);
}

.first {
  border-right: 2px solid white;
  margin: 1.5vw;
}

.body_func_item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0.5vw;
  flex: 1;
  justify-content: center;
}

.body_func_img {
  width: 5vw;
  height: 5vw;
}

.body_fun_text {
  margin-left: 1vw;
  color: white;
  font-size: 3.5vw;
}

.body_item {
  display: flex;
  flex-direction: row;
  width: 92vw;
  padding: 2vw;
  background-color: #f2f2f2;
  margin: 2vw;
  border-radius: 5px;
  align-items: center;
  
  
}

.body_text {
  font-size: 3.3vw;
  color: #767374;
}

.body_progress {
  width: 30%;
  margin-left: 30px;
  border-radius: 100px;
  
  overflow: hidden;
  
}

