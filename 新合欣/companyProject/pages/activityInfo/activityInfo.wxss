.bianjiao{
  position: absolute;
  width: 6vw;
  height: 6vw;
  
}
.contain {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.top_image{
  width: 100vw;
  height: 55vw;
  display: block;
  
  
