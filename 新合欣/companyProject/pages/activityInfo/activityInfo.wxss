.foot {
  height: 12vw;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  box-shadow: 5px 5px 5px 5px rgb(207, 207, 207);
}

.foot_item {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.foot_item_img {
  width: 8vw;
  height: 8vw;
}

.foot_item_left {
  display: flex;
  flex-direction: row;
  flex: 6;
  font-size: 4vw;
  color: #767374;
  justify-content: space-around;
}

.foot_item_right {
  flex: 4;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 5vw;
  color: white;
  background-color: rgb(52,147,34);
  box-shadow: 5px 5px 5px 5px rgb(207, 207, 207);
}
.sharebutton{
    font-size: 4vw;
    border:none;	
    background-color: transparent;
    padding: 0 0 0 1vw; 
    color: gray;

}
.sharebutton::after{
    border:none;
}
.ql-container {
  box-sizing: border-box;
  padding: 6px 0px;
  width: 100%;
  min-height: 0;
  height: auto;

  font-size: 3.5vw;
  line-height: 1.4;
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  padding: 3vw 5vw;
  width: 90vw;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  z-index: 9999;
  background: #f9f9f9;
}

.icon {
  width: 13vw;
}

.loginbutton {
  line-height: 2.3;
  padding-left: 5%;
  padding-right: 5%;
  font-size: 4vw;
  border-radius: 7px;
  background-color: #359422;
  color: white;
}