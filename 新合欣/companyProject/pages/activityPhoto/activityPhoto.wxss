/* pages/activityPhoto/activityPhoto.wxss */

page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.head {
  width: 100%;
  display: flex;
  flex-direction: row;
  /* border-bottom: 2px solid whitesmoke; */
  background-color: rgb(112, 172, 72);
}

.head_item_right {
  padding-left: 1vw;
  display: flex;
  flex-direction: column;
  flex: 1;
  justify-content: center;
}

.head_image {
  margin: 2vw 3vw;
  border-radius: 50%;
  width: 15vw;
  height: 15vw;
}

.head_text {
  font-size: 4vw;
  color: white;
}

.head_right_icon {
  width: 5vw;
  height: 5vw;
  margin-right: 1vw;
}

.head_right_icontext {
  justify-content: left;
  align-items: center;
  padding: 1vw;
  border-radius: 5px;
  margin-right: 1.5vw;
  display: flex;
  flex-direction: row;
  background-color: rgb(112, 172, 72);
  width: 28vw;
}

.head_right_bottom {
  margin-top: 2vw;
  display: flex;
  flex-direction: row;
}

.head_right_bottom_text {
  font-size: 3.3vw;
}

.photo_contain_left {
  display: flex;
  flex-direction: column;
}

.photo_contain_right {
  display: flex;
  flex-direction: column;
}

.photo_item {
  margin: 2vw 0 0 2vw;
  width: 47vw;
  background-color:rgb(112, 172, 72);
}
.bottom{
  font-size: 3.5vw;
  color: gray;
  padding: 2vw;
  display: flex;
  flex-direction: row;
  align-items: center;
}
