/* pages/enterpriseCertification/enterpriseCertification.wxss */

page {
  background-color: rgb(243, 243, 243);
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  
}

checkbox .wx-checkbox-input {
  width: 4vw;
  height: 4vw;
  
}

.contain {
  width: 100vw;
  flex: 1;
  overflow-x: hidden;
  overflow-y: hidden;
  display: flex;
  background-color: white;
}

.top_contain {
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 8vw;
  margin-bottom: 8vw;
  
}

.top_img_contain {
  width: 75vw;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.top_line {
  flex: 1;
  height: 3px;
  background-color: rgb(207, 207, 207);
}

.top_img {
  width: 4vw;
  height: 4vw;
}

.top_text_contain {
  margin-top: 3vw;
  width: 80vw;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 4vw;
}

.form_contain {
  display: flex;
  flex-direction: column;
}

.form_row {
  display: flex;
  flex-direction: row;
  padding: 2vw 3vw;
  align-items: center;
  border-bottom: 1px solid whitesmoke;
}

.form_name {
  font-weight: 500;
  font-size: 4vw;
  width: 30vw;
}

.input_style {
  font-size: 4vw;
  flex: 1;
  color: black;
}
.placeholder_style {
  font-size: 4vw;
  flex: 1;
  color: rgb(214, 214, 214);
}
.big_content{
  width: 100vw;
  height: 100%;
  display: flex;
  flex-direction: column;

}
.content{
  width: 100vw;
  position: absolute;
  bottom: 45%;
  font-size: 4vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.big_icon{
  width: 15vw;
  height: 18vw;
  

}
