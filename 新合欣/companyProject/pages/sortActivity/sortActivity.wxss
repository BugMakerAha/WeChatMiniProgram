/* pages/sortActivity/sortActivity.wxss */

page {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  overflow-x: hidden;
}

.top {
  display: flex;
  flex-direction: column;
  width: 100vw;
  overflow-x: hidden;
}

.search_contain {
  width: 100vw;
  background-color: #359422;
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding-bottom: 1.5vw;
}

.search_bar {
  background-color: white;
  width: 85vw;
  border-radius: 20px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 0.5vw 0;
}

.search_text {
  color: #70ad47;
  font-size: 3.5vw;
}

.sort_contain {
  width: 85vw;
  display: flex;
  flex-direction: row;
  padding: 2vw 0;
}

.sort_item {
  text-align: center;
  flex: 1;
  font-size: 3.5vw;
  color: rgb(128, 128, 128);
}

.border_right {
  border-right: 1.5px solid rgb(177, 177, 177);
}

.content {
  background-color: whitesmoke;
  flex: 1;
  height: 0;
}

.activity_container_2 {
  margin: 2vw 2vw 0 2vw;
  width: 95vw;
  background-color: white;
  border: 0.5vw solid #ffc000;
  border-radius: 8px;
}

.activity_container_1 {
  margin: 2vw 2vw 0 2vw;
  width: 95vw;
  background-color: white;
  border: 0.5vw solid #3c8bce;
  border-radius: 8px;
}

.activity_container_0 {
  margin: 2vw 2vw 0 2vw;
  width: 95vw;
  background-color: white;
  border: 0.5vw solid white;
  border-radius: 8px;
}

.activity {
  flex-direction: row;
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.no_verified_activity {
  height: 50.5vw;
  width: 92vw;
  border: 1vw solid white;
  border-radius: 8px;
  margin-left: 0.5vw;
}

.verified {
  height: 17px;
  width: 17px;
  position: relative;
  margin-left: 1vw;
}

.activityinfo {
  font-size: 4vw;
  color: black;
  padding-left: 2vw;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  display: block;
}

.activityprogress {
  padding-left: 1vw;
  padding: 2vw 0 3vw 2vw;
  width: 60%;
  
}

.progresstext {
  font-size: 3vw;
  margin-top: 2vw;
  margin-left: 4vw;
  line-height: 1;
}

.distance {
  font-size: 3vw;
  color: grey;
  line-height: 1;
}

.activity_func {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 2vw 0;
  font-size: 4vw;
}

.activity_func_item {
  flex: 1;
  text-align: center;
}

.show-btn {
  margin-top: 100rpx;
  color: #2c2;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 20rpx;
}

.wechaticon {
  width: 20%;
  height: 20%;
  margin-left: 40%;
  margin-top: 10%;
}

.loginbutton {
  height: 5%;
  width: 80%;
  margin-top: 10%;
  margin-bottom: 10%;
  padding-left: 5%;
  padding-right: 5%;
  font-size: 13px;
  border-radius: 7px;
  background-color: #359422;
  color: white;
}
.person_dialog_contain{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
   position: fixed;
  z-index: 9999;
  top: 0
}
.person_dialog{
  background-color: white;
  border-radius: 6px;
  width: 94vw;
  display: flex;
  flex-direction: column;
 

}
radio .wx-radio-input{
    border-radius: 50%; 
    width: 28rpx;
    height: 28rpx;
}
radio .wx-radio-input.wx-radio-input-checked::before{
    border-radius: 50%;
    width: 42rpx; 
    height: 42rpx; 
    
    text-align: center;
    font-size: 26rpx; /* 对勾大小 26rpx */
    color:rgb(125,184,82); /* 对勾颜色 */
    background: rgb(125,184,82);
    border-color:rgb(125,184,82);
}
.photo_box{
 
  width: 100%;
  margin: 7vw 4vw 3vw 4vw;
  display: flex;
  flex-direction: column;
}
.photo_contain {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;

}

.photo_item {
  width: 31%;
  height: 20vw;
  margin: 0 1.16% 3vw 1.16%;
  background-color: whitesmoke;
}

.photo_item_img {
  width: 100%;
  height: 100%;
}

.close2 {
  position: absolute;
  width: 6vw;
  height: 6vw;
  margin-top: -2vw;
  margin-left: 25%;
  
}