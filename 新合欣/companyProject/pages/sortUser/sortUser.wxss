.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  padding: 3vw 5vw;
  width: 90vw;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  z-index: 9999;
  background: #f9f9f9;
}

.icon {
  width: 13vw;
}

.loginbutton {
  line-height: 2.3;
  padding-left: 5%;
  padding-right: 5%;
  font-size: 4vw;
  border-radius: 7px;
  background-color: #359422;
  color: white;
}
.person_dialog_contain{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
   position: fixed;
  z-index: 9999;
  top: 0
}
.person_dialog{
  background-color: white;
  border-radius: 6px;
  width: 94vw;
  display: flex;
  flex-direction: column;
 

}
radio .wx-radio-input{
    border-radius: 50%; 
    width: 28rpx;
    height: 28rpx;
}
radio .wx-radio-input.wx-radio-input-checked::before{
    border-radius: 50%;
    width: 42rpx; 
    height: 42rpx; 
    
    text-align: center;
    font-size: 26rpx; /* 对勾大小 26rpx */
    color:rgb(125,184,82); /* 对勾颜色 */
    background: rgb(125,184,82);
    border-color:rgb(125,184,82);
}
.photo_box{
 
  width: 100%;
  margin: 7vw 4vw 3vw 4vw;
  display: flex;
  flex-direction: column;
}
.photo_contain {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;

}

.photo_item {
  width: 31%;
  height: 20vw;
  margin: 0 1.16% 3vw 1.16%;
  background-color: whitesmoke;
}

.photo_item_img {
  width: 100%;
  height: 100%;
}

.close2 {
  position: absolute;
  width: 6vw;
  height: 6vw;
  margin-top: -2vw;
  margin-left: 25%;
  
}