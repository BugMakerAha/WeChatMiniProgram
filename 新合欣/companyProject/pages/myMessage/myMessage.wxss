page {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.contain {
  display: flex;
  flex-direction: column;
  height:0;
  flex: 1;
  
}


.tapbar {
  display: flex;
  justify-content: space-around;
  border-bottom: 2px solid whitesmoke;
}
.tapbar_item{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.tapbar_item_img{
  width: 10vw;
  height: 10vw;
  margin: 2vw;
}

.text_top {
  color: black;
  font-size: 3.5vw;
  margin: 2.5vw 0 ;
}



.on {
  color: #70ad47;
}

.swiper-box {
  display: block;
  flex: 1;
  height: 0;
  width: 100%;
  
}


.message_contain {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.join_message_item {
  display: flex;
  width: 100vw;
  
  flex-direction: row;
  border-bottom: 1px solid whitesmoke;
  background-color: white;
}


.join_item_pic {
  width: 14vw;
  height: 14vw;
  border-radius: 50%;
  margin: 2vw;
  
}
.system_item_pic{
  width: 23vw;
  height: 14vw;
  margin: 2vw;
}

.join_item_content {
  display: flex;
  flex: 1;
  flex-direction: column;
  font-size: 3.5vw;
  justify-content: center;
  overflow: hidden;
  
}
.myapply_contain{
  
  color: gray;
  border-radius: 5px;
font-size: 4vw;
  display: flex;
  flex-direction: column;
  width: 100%;
}
.myapply_item {
  display: flex;
  width: 100vw;
  height: 20vw;
  align-items: center;
  justify-content: space-around;
  flex-direction: row;
  border-bottom: 1px solid whitesmoke;
  background-color: white;
}
.activityprogress{
    margin-right: 2vw;
    width: 35vw;
}



.page_row{
  display: flex;
  flex-direction: row;
  width: 100%;
  
  
}

