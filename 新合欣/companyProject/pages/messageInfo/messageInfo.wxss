/* pages/messageInfo/messageInfo.wxss */
page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.top{
  background-color: #359422;
  width: auto;
  height: 8vw;
  color: white;
  font-size: 4vw;
  margin: 0 0vw 3vw 0vw;
  display: flex;
  justify-content: center;
  align-items: center;
  -webkit-box-shadow: 0 2px 6px -5px BLACK inset;
  border-bottom-left-radius: 50px;
  border-bottom-right-radius: 50px; 


}
.top_bianjiao{
  width: 8vw;
  height: 8vw;
  position: absolute;
}
.contain {
  display: flex;
  flex-direction: column;
  height:0;
  flex: 1;
  background-color: rgb(239, 239, 239);
  
}
.join_item_content {
  display: flex;
  flex: 1;
  flex-direction: column;
  font-size: 3.5vw;
  justify-content: center;
  overflow: hidden;
  
  
}

.join_message_item {
  display: flex;
  width: 100vw;

  flex-direction: row;
  border-bottom: 1px solid whitesmoke;
  background-color: white;
}

.join_item_pic {
  width: 14vw;
  height: 14vw;
  border-radius: 50%;
  margin: 2vw;
  
}