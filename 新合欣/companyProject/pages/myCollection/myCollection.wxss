}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 500;
  color: #fff;
}

.modal-dialog {
  width: 66vw;
  overflow: hidden;
  position: fixed;
  top: 43%;
  left: 17%;
  z-index: 501;
}
