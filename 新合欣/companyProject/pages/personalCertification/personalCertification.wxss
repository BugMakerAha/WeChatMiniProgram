/* pages/personalCertification/personalCertification.wxss */
page{
  width: 100%;
  height: 100%;
}
.person_dialog{
  background-color: white;
  width: 100vw;
  display: flex;
  flex-direction: column;
 

}
radio .wx-radio-input{
    border-radius: 50%; 
    width: 28rpx;
    height: 28rpx;
}
radio .wx-radio-input.wx-radio-input-checked::before{
    border-radius: 50%;
    width: 42rpx; 
    height: 42rpx; 
    
    text-align: center;
    font-size: 26rpx; /* 对勾大小 26rpx */
    color:rgb(125,184,82); /* 对勾颜色 */
    background: rgb(125,184,82);
    border-color:rgb(125,184,82);
}
.photo_box{
 
  width: 100%;
  margin: 10vw 4vw 3vw 4vw;
  display: flex;
  flex-direction: column;
}
.photo_contain {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;

}

.photo_item {
  width: 31%;
  height: 20vw;
  margin: 0 1.16% 3vw 1.16%;
  background-color: whitesmoke;
}

.photo_item_img {
  width: 100%;
  height: 100%;
}

.close2 {
  position: absolute;
  width: 6vw;
  height: 6vw;
  margin-top: -2vw;
  margin-left: 25%;
  
}
.big_icon{
  width: 13vw;
  height: 16vw;
}
.content{
  width: 100vw;
  position: absolute;
  bottom: 45%;
  font-size: 4vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.shadow{
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
  opacity: 0.5;
  background-color: black
}
.modal{
  position: fixed;
z-index: 99;
width: 82vw;
height: 60%;
background-color: white;
padding: 3vw;
top: 20%;
left: 6vw;
border-radius: 5px;

}