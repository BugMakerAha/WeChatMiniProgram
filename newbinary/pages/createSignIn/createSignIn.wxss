/* pages/createSignIn/createSignIn.wxss */
page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: whitesmoke;
}
.top {
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid lightgray;
  background-color: white;
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 900;
  color: #fff;
  
}
.window{
  width: 80vw;
  position: relative;
  z-index: 999;
  padding: 2vw;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 10px;


}
.content {
  background-color: white;
  flex: 1;
  height: 0;
  overflow: scroll;
  border-top: 1px solid whitesmoke;
}
.sign_item_box {
  width: 100vw
}
.sign_item {
  padding: 3vw 0;
  margin: 0 2vw;
  border-bottom: 1px solid rgb(240, 240, 240);
}

.button-hover[plain] {
  background-color: rgb(250, 250, 250);
  color: black;
}
button[plain]{
  background-color: white;
  border:none;
}
button{
  padding: 0;
  margin: 0;
  line-height:1.3;
  
  border-radius:0
}